var totDiv;
$(document).ready(function(){
	totDiv = $('.eventClass').length;
	
	var udata = {"methodId": "21","totDiv":totDiv};
	postAjaxUpcomingEventsHome(udata,upcomingEvents);
});


function postAjaxUpcomingEventsHome(udata,callback){

	$.ajax({
		type: 'POST',
		url: '/tourism/util',
		data: udata,
		success: function(data) {
		var jsonResponse;
		if(data != ''){
			jsonResponse=JSON.parse(data);
		}
		else {
			
		}			
		  callback(jsonResponse);		
		},
		error: function (xhr) {
			console.log(xhr.status);
		}

	});
}

